generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo {
  @@map("todos")
  id String @id @default(uuid())
  title String
  isCompleted Boolean
  parentId String?
  parent Todo? @relation("SubTodos", fields: [parentId], references: [id], onDelete: Cascade)
  subTodos Todo[] @relation("SubTodos")
  createdAt String
}